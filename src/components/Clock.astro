---
// サーバーサイドで実行されるJavaScript
const initialTime = new Date().toLocaleTimeString();
---
<div id="realtime-clock">
	{initialTime}
</div>
<script>
// クライアントサイドで実行されるJavaScript
const setupClock = () => {
  const updateClock = () => {
    const now = new Date();
    const timeString = now.toLocaleTimeString();
    document.getElementById('realtime-clock').textContent = timeString;
  };

  setInterval(updateClock, 1000);
};

// ページが読み込まれた後に時計をセットアップする
window.addEventListener('load', setupClock);
</script>
<style>
#realtime-clock {
    font-size: 24px;
    font-weight: bold;
}
</style>
