---
import BaseLayout from '../../layouts/BaseLayout.astro'
import Greeting from '../../components/Greeting.astro'
const title = "Home"
const myName = 'yoda'
const locale = Astro.currentLocale ? Astro.currentLocale : 'en';
---
<BaseLayout title={ title }>
	<div class="w-full flex flex-col items-center justify-center">
		<Greeting />
		<br/>
		<p id="message" class="typing-animation">
			私のプロフィールは<a href=`/${locale}/aboutme` class="text-blue-300">こちら</a>をご覧ください。
		</p>
	</div>
</BaseLayout>

<style>
	.typing-animation {
		width: 0ch;
		border-right: 3px solid #ffffff;	/*点滅バー*/
		overflow: hidden;	/*必須*/
		white-space: nowrap;	/*必須*/
		line-height:1.4;
		font-weight:700;
		@apply animate-typing;
	}
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const element = document.getElementById('message');
        if (element) {
            const textLength = element.textContent.length + 6;
            element.style.width = `${textLength}ch`;
        }
    });
</script>