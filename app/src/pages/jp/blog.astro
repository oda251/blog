---
import BaseLayout from '../../layouts/BaseLayout.astro'
import { TweetApp } from '../../components/Tweet/TweetApp'
import tweetRepository from '../../repository/tweetRepository'
const title = 'blog'

const initTweets = await tweetRepository.fetchTweetByLastId(null)
const tagMap = await tweetRepository.fetchTags()
---

<BaseLayout title={title}>
  <TweetApp client:only="react" tweets={initTweets} tagMap={tagMap} />
</BaseLayout>
