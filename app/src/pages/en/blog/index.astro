---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import TweetApp from '../../../components/TweetApp/index';
import tweetRepository from '../../../repository/tweetRepository';
import { t } from '../../../i18n';
const title = t('blog');

const initTweets = await tweetRepository.fetchTweetsByOldId(null);
const tagMap = await tweetRepository.fetchTags();
---

<BaseLayout title={title}>
  <TweetApp client:only="react" tweets={initTweets} tagMap={tagMap} />
</BaseLayout>
