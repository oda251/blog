---
import ProfileCard from '../information/ProfileCard.astro';
---

<footer class="relative w-full mt-20">
  <div class="waves-container absolute top-0 left-0 w-full h-24 -translate-y-full">
    <svg class="waves" xmlns="http://www.w3.org/2000/svg" viewBox="0 24 150 28" preserveAspectRatio="none">
      <defs>
        <path id="gentle-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z" />
      </defs>
      <g class="parallax">
        <use xlink:href="#gentle-wave" x="48" y="0" class="fill-sky-500/20 opacity-70" />
        <use xlink:href="#gentle-wave" x="48" y="3" class="fill-sky-500/20 opacity-50" />
        <use xlink:href="#gentle-wave" x="48" y="5" class="fill-sky-500/20 opacity-30" />
        <use xlink:href="#gentle-wave" x="48" y="7" class="fill-sky-500/20" />
      </g>
    </svg>
  </div>
  <div class="px-4">
    <ProfileCard class="" />
  </div>
</footer>

<script>
  import { gsap } from "gsap";

  gsap.to(".parallax use", {
    x: "-=96",
    duration: 25,
    repeat: -1,
    ease: "none",
    stagger: 0.5
  });
</script>

<style>
  .waves-container {
    pointer-events: none;
  }
  .waves {
    position: relative;
    width: 100%;
    height: 15vh;
    min-height: 100px;
    max-height: 150px;
  }
  .parallax > use {
    animation: move-forever 25s cubic-bezier(.55,.5,.45,.5) infinite;
  }
  .parallax > use:nth-child(1) {
    animation-delay: -2s;
    animation-duration: 7s;
  }
  .parallax > use:nth-child(2) {
    animation-delay: -3s;
    animation-duration: 10s;
  }
  .parallax > use:nth-child(3) {
    animation-delay: -4s;
    animation-duration: 13s;
  }
  .parallax > use:nth-child(4) {
    animation-delay: -5s;
    animation-duration: 20s;
  }
  @keyframes move-forever {
    0% {
      transform: translate3d(-90px,0,0);
    }
    100% { 
      transform: translate3d(85px,0,0);
    }
  }
</style>
